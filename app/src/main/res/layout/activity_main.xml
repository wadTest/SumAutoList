<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!--แถบเครื่องมือ-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnNext"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <!--เนื้อหา-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--ที่ดินเปล่า-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ตั้งชื่อทรัพย์"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <!--กรอก ที่ดินเปล่า-->
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:hint="ตั้งชื่อทรัพย์สินของท่าน"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--ที่ดินเปล่า-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ที่ดินจำนวน (แปลง)"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>


            <!--แถวที่ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorSky"
                android:gravity="center"
                android:orientation="horizontal">

                <!--เอกสารสิทธิ์-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:text="@string/edit_praped"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main"
                    android:textStyle="bold" />

                <!--เลขที่-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:text="@string/edit_number1"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main"
                    android:textStyle="bold" />

                <!--เนื้อที่ดิน-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:text="@string/edit_ntee"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tableList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รวมเนื้อที่ดิน"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <TextView
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="0"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:text="ตรม."
                    android:textColor="@color/colorBack"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ที่ตั้งที่ดิน"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/size18"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--จังหวัด-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="จังหวัด"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:gravity="center"
                    android:hint="จังหวัด"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>

            <!--อำเภอ/เขต-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เขต/อำเภอ"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:gravity="center"
                    android:hint="เขต/อำเภอ"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>

            <!--แขวง/ตำบล-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="แขวง/ตำบล"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:gravity="center"
                    android:hint="แขวง/ตำบล"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>

            <!--ถนน-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ถนน"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:gravity="center"
                    android:hint="ถนน"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>

            <!--ซอย-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ซอย"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:gravity="center"
                    android:hint="ซอย"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>

            <!--โครงการ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="โครงการ"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/b_edittext"
                    android:gravity="center"
                    android:hint="โครงการ"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>

            <!--ประเภทกรรมสิทธิ์-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ประเภทกรรมสิทธิ์"
                    android:textColor="@color/colorBack"
                    android:textSize="@dimen/size_main" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp">

                    <Spinner
                        android:id="@+id/spinner5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/size_main" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <!--เจ้าของผู้ถือกรรมสิทธิ์ทรัพย์สิน-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="เจ้าของผู้ถือกรรมสิทธิ์ทรัพย์สิน"
                android:textColor="@color/colorBack"
                android:textSize="@dimen/size_main"
                android:textStyle="bold" />

            <!--เลือก clackbox-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="checkboxName"
                    android:text="ตรงตามชื่อก่อนหน้า"
                    android:textSize="@dimen/size_main" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="checkboxMenu"
                    android:text="ชื่อบุคคลอื่น"
                    android:textSize="@dimen/size_main" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="checkboxMenu"
                    android:text="ไม่ทราบ"
                    android:textSize="@dimen/size_main" />
            </LinearLayout>


            <!--ชื่อที่ดิึง มาจากหน้าลงทะเบียน-->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/b_edittext"
                android:textColor="@color/colorBack"
                android:textSize="16sp" />

            <!--title เพื่อเก็บค่าใครกรอกข้อมูล อิงจากการล็อกอิน-->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/b_edittext"
                android:textColor="@color/colorBack"
                android:textSize="16sp" />

            <!--checkbox เลือก บุคคลธรรมดา, นิติบุคคล-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <!--Subheading ตรงตามชื่อก่อนหน้า-->
                        <CheckBox
                            android:id="@+id/checkBox3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="บุคคลธรรมดา"
                            android:textSize="@dimen/size_main" />

                        <CheckBox
                            android:id="@+id/checkBox4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="checkboxMenu1"
                            android:text="นิติบุคคล"
                            android:textSize="@dimen/size_main" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ชื่อนิติบุคคล"
                            android:textColor="@color/colorBack"
                            android:textSize="@dimen/size_main" />


                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editT9"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/b_edittext"
                            android:hint="ชื่อนิติบุคคล"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="@dimen/size_main" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ที่อยู่"
                            android:textColor="@color/colorBack"
                            android:textSize="@dimen/size_main" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editT10"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/b_edittext"
                            android:hint="กรอกที่อยู่"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textSize="@dimen/size_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="โทรศัพท์"
                            android:textColor="@color/colorBack"
                            android:textSize="@dimen/size_main" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editT11"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/b_edittext"
                            android:hint="หมายเลยโทรศัพท์"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="@dimen/size_main" />
                    </LinearLayout>
                </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="ส่งเอกสาร" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ส่งภาพถ่าย" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="ส่งพิกัดแผนที่" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="บันทึกข้อมูล" />
</RelativeLayout>